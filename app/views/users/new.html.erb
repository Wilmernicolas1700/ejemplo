<%= flash[:alert] %>
<h1>Nuevo Usuario</h1>
<div class="form-horizontal">
<%= simple_form_for @user do |f| %>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :nombre, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :telefono, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
</div>




